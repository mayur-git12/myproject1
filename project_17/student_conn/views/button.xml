<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_button_form" model="ir.ui.view">
        <field name="name">view.button.form</field>
        <field name="model">wb.student</field>
        <field name="inherit_id" ref="students.wb_students_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="inside">
                <div class="oe_button_box" name="button_box">
                    <button class="oe_stat_button btn btn-primary" name="action_view_account" type="object" string="School Info">
                        <field name="school_info_count" widget="statinfo"/>
                    </button>
                    <button class="oe_stat_button" name="action_view_job" type="object" string="Occupation Details"/>
                        
                </div>
            </xpath>
        </field>
    </record>
</odoo>
