<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="res_setting_menu_form" model="ir.ui.view">
        <field name="name">menu view form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//app[@name='account']" position="after">
                <app data-string="Joining Datetime Configuration" string="Joining Datetime Configuration" name="Joining_Datetime_Configuration">
                    <block title="Joining Datetime Configuration">
                        <setting string="Joining Datetime Configuration">
                            <p>This is Student Joining Configuration Date</p>
                            <field name="join_days" />
                        </setting>
                    </block>
                </app>
            </xpath>
        </field>
    </record>
</odoo> 